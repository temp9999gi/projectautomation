<?xml version="1.0" standalone="no"?>
<!DOCTYPE table SYSTEM "file:table.dtd">
<table name="Employees"
      comment=""
      inherits_from="People"> 
  <column name="salary"
          full_name="salary"
          type="float"
          comment="income for this employee"/>
  <column name="manager_fk"
          full_name="manager"
          type="int4"
          comment="define the employee who is the manager of this
          entity"/>
  <!-- assumes single manager, *snicker* -->
  <foreign_key column_id="manager_fk"
               foreign_table      ="Employees"
               foreign_table_pkey ="Uid"
               fkey_type          ="&fkey_mto;"
               local_association_name="Manager"
               foreign_association_name="Managed" />
</table>
